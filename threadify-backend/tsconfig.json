{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
        "@controllers/*": ["controllers/*"],
        "@routes/*": ["routes/*"],
        "@services/*": ["service/*"],
        "@types/*": ["types/*"],
        "@interfaces/*": ["interfaces/*"],
        "@config/*": ["config/*"],
        "@middleware/*": ["middleware/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }